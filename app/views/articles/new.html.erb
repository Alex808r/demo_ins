<h1>New article</h1>

<%= form_with(model: @article, local: true)  do |f| %>
  <div>
  <% if @article %>
      <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
      </ul>

  <% end %>
  </div>

  <p>
    <%= f.label :title %>   <br/>
    <%= f.text_field :title, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :body %>    <br/>
    <%= f.text_area :body, class: 'form-control' %>
  </p>

  <p>
    <%= f.submit "Save", class: "btn btn-success" %>
  </p>
<% end %>